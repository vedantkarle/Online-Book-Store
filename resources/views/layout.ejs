<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Store</title>
    <link
      rel="icon"
      href="https://www.graphicsprings.com/filestorage/stencils/68ea7d075a2064907de0c873ea1d81f3.png?width=500&height=500"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@500&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />
    <link rel="stylesheet" href="/css/app.css" />
  </head>
  <body>
    <header
      class="lg:px-16 px-8 bg-white flex flex-wrap items-center py-4 shadow-md"
    >
      <div class="flex-1 flex justify-between items-center">
        <a href="/" class="flex text-xl"
          ><img
            class="mr-3"
            src="/img/pravasi-logo.jpg"
            alt="pravasi"
            width="54"
            height="54"
          />
          प्रवासी</a
        >
      </div>

      <label for="menu-toggle" class="pointer-cursor md:hidden block">
        <svg
          class="fill-current text-gray-900"
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 20 20"
        >
          <title>menu</title>
          <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
        </svg>
      </label>
      <input class="hidden" type="checkbox" id="menu-toggle" />

      <div class="hidden md:flex md:items-center md:w-auto w-full" id="menu">
        <nav>
          <ul
            class="md:flex items-center justify-between text-base text-gray-700 pt-4 md:pt-0"
          >
            <li class="ml-6 md:p-4 py-3 px-0 block"><a href="/">Menu</a></li>
            <% if(user){ %>
            <li class="ml-6 md:p-4 py-3 px-0 block">
              <form id="logout" action="/logout" method="POST">
                <a onclick="document.getElementById('logout').submit()" href="#"
                  >Logout</a
                >
              </form>
            </li>
            <% if(user.role === 'admin'){ %>
            <li class="ml-6 md:p-4 py-3 px-0 block">
              <a href="/admin/orders">Orders</a>
            </li>
            <% }else{ %>
            <li class="ml-6 md:p-4 py-3 px-0 block">
              <a href="/customer/orders">Orders</a>
            </li>
            <% } %> <% } else{ %>
            <li class="ml-6 md:p-4 py-3 px-0 block">
              <a href="/login">Login</a>
            </li>
            <li class="ml-6 md:p-4 py-3 px-0 block">
              <a href="/register">Register</a>
            </li>
            <% } %>
            <li class="ml-6 md:p-4 py-3 px-0 inline-block">
              <a
                href="/cart"
                class="inline-block px-4 py-2 rounded-full flex text-white items-center"
              >
                <img src="/img/cart.png" alt=""
              /></a>
            </li>
          </ul>
        </nav>
      </div>
    </header>
    <%- body %>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/app.js"></script>
  </body>
</html>
